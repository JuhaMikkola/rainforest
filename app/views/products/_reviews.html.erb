<% @product.reviews.each do |review| %>
  <% unless review.new_record? %>
    <div class="review">
      <div class="poster">
        Posted by <%= review.user.name %> on <%= review.created_at %>
      </div>
      <p class="comment">
        <%= review.comment %>
      </p>
    </div>
  <% end %>
<% end %>